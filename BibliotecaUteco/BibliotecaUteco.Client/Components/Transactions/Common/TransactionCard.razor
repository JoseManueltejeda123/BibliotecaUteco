<div class=@($"w-full p-3 flex  rounded-xl gap-3 bg-neutral-100/70 {(Mount < 0 ? "hover:bg-red-50 text-red-800": "hover:bg-green-50 text-green-800")}")>
        @if (Mount < 0)
        {

            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-down-right-icon lucide-arrow-down-right"><path d="m7 7 10 10"/><path d="M17 7v10H7"/></svg>
        }
        else
        {
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-up-left-icon lucide-arrow-up-left"><path d="M7 17V7h10"/><path d="M17 17 7 7"/></svg>


        }
        <div class="flex flex-col gap-1 w-full">
            
            <div class="flex w-full">
                @if (Mount < 0)
                {
                    <label class="text-sm font-semibold">Retiro de caja</label>

                }
                else
                {
                    <label class="text-sm font-semibold">Abono a caja</label>

                }
                <p class="text-[13px] font-semibold text-neutral-700 ml-auto">17 Oct 2025</p>
            </div>
           
            <label class="text-lg font-semibold">RD$ @Mount</label>

            <SidebarSectionDivider Name="Creador de la transacción"/>

            <div class="flex items-center gap-3 text-neutral-800">
                <LumexAvatar Size="Size.Small" Color="ThemeColor.Primary" Name="Manuel Lopez"/>
                <div class="flex flex-col">
                    <p class="text-sm">Manuel López</p>
                    <p class="text-xs">@("@manuel.lopez")</p>

                </div>
            </div>



        </div>
       
    
   
</div>


@code{


    [Parameter] public int Mount { get; set; } = 0;

}